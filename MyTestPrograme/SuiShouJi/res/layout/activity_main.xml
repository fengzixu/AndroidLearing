<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:background="@drawable/main_bg" >

        <RelativeLayout
            android:id="@+id/upbig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/main_top_month_report_bg" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/widget_battery_bg"
                android:src="@drawable/widget_battery_cover" />

            <LinearLayout
                android:id="@+id/upbig1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/imageView1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/upbig11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="24dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#FF0000"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/nian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/2015"
                        android:textColor="#CD661D" />
                </LinearLayout>

                <TableLayout
                    android:layout_marginTop="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收入总额："
                                android:textColor="#CD661D" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="￥0.00"
                                android:textColor="#050505" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow>

                        <View
                            android:layout_height="0.1dip"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:background="#77CD661D" />
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:id="@+id/upbig122"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支出总额："
                                android:textColor="#CD661D" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="￥0.00"
                                android:textColor="#050505" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow>

                        <View
                            android:layout_height="0.1dip"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:background="#77CD661D" />
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:id="@+id/upbig13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="預算余额："
                                android:textColor="#CD661D" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="￥0.00"
                                android:textColor="#050505" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/upsmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upbig"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.05"
                android:background="@drawable/main_add_expense_quickly_new_normal"
                android:text="记一笔"
                android:textColor="#ffffff" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="0.08"
                android:background="@drawable/main_assistant_btn_normal"
                android:src="@drawable/spirit_magic_dark_color" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.23" >
    </LinearLayout>

</LinearLayout>